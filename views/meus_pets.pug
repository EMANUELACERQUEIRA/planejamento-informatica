extends layouts/cliente-layout.pug

block main
    .d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
        .h2 Meus Pets
        .btn-toolbar.mb-2.mb-md-0
            button.btn.btn-sm.btn-outline-secondary( id="atualizarRelatorio" type="button" ) Atualizar
            button.btn.btn-sm.btn-outline-secondary( data-bs-toggle="modal" data-bs-target="#petModal" ) Novo Pet
            button.btn.btn-sm.btn-outline-secondary( id="exportarRelatorio" type="button" ) Exportar
    div( id="table_pet" )

    div.modal.fade( id="petModal" tabindex="-1" aria-labelledby="petModalLabel" aria-hidden="true" )
        .modal-dialog.modal-dialog-centered.modal-lg
            .modal-content
                .modal-header
                    h5.modal-title( id="petModalLabel" ) Meu Pet
                    button.btn-close( type="reset" data-bs-dismiss="modal" aria-label="Close" )
                .modal-body
                    form.g-3( id="petForm" method="POST" action="/")
                        .row
                            .col-sm
                                img( src="../img/gatinho.jpeg" )
                            .col-lg
                                .col-12( hidden )    
                                    label.form-label( for="id" ) Id
                                    input.form-control( type="text" name="id" id="id" )
                                .col-12
                                    label.form-label( for="nome" ) Nome
                                    input.form-control( name="nome" id="nome" required )
                                .col-12
                                    label.form-label( for="raca" ) Raça / Espécie
                                    input.form-control( type="text" name="raca" id="raca" required )
                                .col-12
                                    label.form-label( for="foto" ) Incluir uma foto
                                    input.form-control( type="file" id="foto" )
                        .modal-footer
                            button.btn.btn-secondary( type="reset", data-bs-dismiss="modal" ) Cancelar
                            button.btn.btn-danger( type="button", id="excluirButton", hidden, onClick="onClickExcluirpet()" ) Excluir
                            button.btn.btn-primary( type="submit" ) Gravar

    include includes/msg-alert.pug

    script( type="text/javascript" ).
        relatorioListarPet();